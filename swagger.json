{
  "swagger": "2.0",
  "info": {
    "description": "Auto Mart is an online market place for automobiles of diverse makes, model, or body type. With Auto Mark, users can sell their cars or buy from trusted dealerships or private sellers",
    "version": "1.0.0",
    "title": "Auto Mart",
    "contact": {
      "email": "alliolaoluwa@gmail.com"
    }
  },
  "host": "locahost:5500",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "cars",
      "description": "Inventory of Automobiles for sale"
    },
    {
      "name": "orders",
      "description": "Deals, Transactions to buy cars"
    },
    {
      "name": "users",
      "description": "Registered users can buy and sell cars"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Signs up a new user",
        "description": "Registers a user and assigns an authentication token",
        "parameters": [
          {
            "in": "body",
            "name": "auth",
            "schema": {
              "$ref": "#/definitions/user"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "signs in a registered user",
        "description": "Endpoint for signing in users",
        "parameters": [
          {
            "in": "body",
            "name": "auth",
            "schema": {
              "$ref": "#/definitions/user"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/car": {
      "post": {
        "tags": [
          "cars"
        ],
        "summary": "Creates a car ad sale",
        "description": "Adds a created car ad sale to te inventory of cars collection",
        "parameters": [
          {
            "in": "body",
            "name": "car",
            "schema": {
              "$ref": "#/definitions/car"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "car ad succesfully created"
          },
          "400": {
            "description": "invalid input"
          }
        }
      },
      "get": {
        "tags": [
          "cars"
        ],
        "summary": "Gets all car ad sales",
        "description": "Get all car ads",
        "responses": {
          "200": {
            "description": "succesful"
          },
          "400": {
            "description": "invalid input"
          }
        }
      }
    },
    "/car/{car_id}": {
      "get": {
        "tags": [
          "cars"
        ],
        "summary": "Find car ad by ID",
        "description": "Returns a single car ad",
        "parameters": [
          {
            "name": "car_id",
            "in": "path",
            "description": "ID of car ad to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/cars"
            }
          },
          "400": {
            "description": "Invalid Input"
          },
          "404": {
            "description": "Car ad not found"
          }
        }
      }
    }
  },
  "definitions": {
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "email": {
          "type": "string"
        },
        "fistName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "is_admin": {
          "type": "string",
          "default": false
        }
      }
    },
    "users": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/user"
      }
    },
    "car": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "owner": {
          "type": "integer",
          "format": "int64"
        },
        "createdOn": {
          "type": "string",
          "format": "date"
        },
        "state": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "price": {
          "type": "number",
          "format": "float"
        },
        "manufacturer": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "body": {
          "type": "string"
        }
      }
    },
    "cars": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/car"
      }
    }
  }
}